{
    "manifest_version": 3,
    "name": "AutoBet Controller",
    "version": "1.0",
    "description": "Automatically clicks 'Start Autobet' and manages betting based on profit and balance.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://stake.com/casino/games/dice"], 
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon.png"
    }
  }
  